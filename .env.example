# Example environment variables - copy to .env and modify as needed

# Optional: Path to local sentence-transformer model
# MINDMESH_LOCAL_MODEL_PATH=/path/to/all-MiniLM-L6-v2

# Database URL (default is SQLite)
# DATABASE_URL=sqlite:///./app.db

# API settings
HOST=127.0.0.1
PORT=8000
RELOAD=true

# CORS settings (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Logging
LOG_LEVEL=INFO